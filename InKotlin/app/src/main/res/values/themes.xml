<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PomodoroApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/splash_scree_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="actionBarStyle">@style/MyToolbarStyle</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="buttonsTimerStyle" parent="Widget.Material3.Button.TextButton">
        <item name="iconSize">40dp</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeColor">@color/green_700</item>

        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_marginTop">@dimen/common_padding_middle</item>


    </style>
    <style name="MyToolbarStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="android:colorPrimary">@color/black</item>
    </style>

    <style name="SplashScreenLemon" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_scree_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/lemodoro_icon_splash_screen</item>
        <item name="postSplashScreenTheme">@style/Theme.PomodoroApp</item>
    </style>
    <dimen name="common_padding_high">40dp</dimen>
    <style name="tvHistoryStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
    </style>
</resources>